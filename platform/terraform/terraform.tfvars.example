# CloudStack API access
cloudstack_api_url    = "https://cloudstack.example.com/client/api"
cloudstack_api_key    = "CHANGEME"
cloudstack_secret_key = "CHANGEME"

# Cluster identity
cluster_name = "locaweb-lite"

# Control plane
control_plane_count = 1
control_plane_ips   = ["10.0.0.10"]
control_plane_ip    = "10.0.0.10"
control_plane_service_offering = "large"

# API load balancer (always enabled)
api_lb_allowed_cidrs = ["0.0.0.0/0"]

# Ingress public IP (always allocated)
ingress_allowed_cidrs = ["0.0.0.0/0"]

# Agents
agent_count = 3
agent_ips   = ["10.0.0.11", "10.0.0.12", "10.0.0.13"]
agent_service_offering = "xlarge"

# CloudStack resources
cloudstack_zone     = "zone-1"
cloudstack_template = "ubuntu-22.04"

# CloudStack network
network_cidr     = "192.168.0.0/21"
network_offering = "c39d7786-2967-4b18-948e-a97d605cbf89"
network_domain   = "cluster.local"

# Access and tags
tags = {
  env     = "dev"
  project = "locaweb"
}

# SSH
ssh_user = "root"

# Ingress PROXY protocol
ingress_proxy_protocol_enabled = true
ingress_proxy_protocol_trusted_ips = []

# Addon namespaces
traefik_namespace       = "traefik"
cert_manager_namespace  = "cert-manager"
cilium_namespace        = "kube-system"
kured_namespace         = "kube-system"
k8up_namespace          = "k8up"
cloudstack_namespace    = "cloudstack-system"
system_upgrade_namespace = "system-upgrade"

# cert-manager
cert_manager_email = "admin@example.com"

# Output paths (optional)
kubeconfig_output_path = ""
ssh_private_key_path   = ""

# Cilium API settings
k8s_service_port = 6443

# Kured schedule defaults
kured_start_time = "5:00"
kured_end_time   = "6:59"
kured_time_zone  = "UTC"
kured_period     = "15m"

# k3s
k3s_version = "v1.29.6+k3s1"
k3s_arch    = "amd64"

# OIDC (optional)
oidc_issuer_url = ""
oidc_client_id  = ""

# k3s readiness
k3s_ready_timeout_minutes = 15
